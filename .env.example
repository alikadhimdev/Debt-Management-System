# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# MongoDB Configuration
# For local development with replica set:
# MONGODB_URI=mongodb://localhost:27017,localhost:27018,localhost:27019/debt_management?replicaSet=rs0
# For MongoDB Atlas or remote:
MONGODB_URI=mongodb://localhost:27017/debt_management

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production
JWT_ACCESS_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Idempotency
IDEMPOTENCY_KEY_TTL=86400

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
